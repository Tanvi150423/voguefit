{
    "manifest_version": 3,
    "name": "VogueFit",
    "version": "1.0.0",
    "description": "Your AI Stylist & Shopping Assistant",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*.myntra.com/*",
        "*://*.zara.com/*",
        "*://*.hm.com/*",
        "*://*.uniqlo.com/*",
        "*://*.ajio.com/*",
        "*://*.flipkart.com/*"
    ],
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "background": {
        "service_worker": "src/background/index.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.myntra.com/*",
                "*://*.zara.com/*",
                "*://*.hm.com/*",
                "*://*.uniqlo.com/*",
                "*://*.ajio.com/*",
                "*://*.flipkart.com/*"
            ],
            "js": [
                "src/content/index.ts"
            ],
            "run_at": "document_idle"
        }
    ]
}